<section class="home-intro">
  <% if (page.about) { %>
    <p class="home-about"><%= page.about %></p>
  <% } %>

  <% if (page.content) { %>
    <div class="home-body"><%- page.content %></div>
  <% } %>

  <p class="home-links">
    <% if (page.github) { %>
      <a class="btn" href="<%- page.github %>" target="_blank" rel="noopener">GitHub</a>
    <% } %>
    <% if (page.email) { %>
      <a class="btn" href="mailto:<%- page.email %>">Email</a>
    <% } %>
  </p>
</section>
